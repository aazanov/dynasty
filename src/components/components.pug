mixin logo()
    .logo
        span Санкт-Петербургская Региональная общественная организация потребителей
        img(src='assets/img/logo.svg')
        span династия


mixin text-field($icon, $placeholder, $name)
    .text-field
        i.fa(class='fa-'+$icon)
        input(type='text' placeholder=$placeholder name=$name)

mixin offer($image)
    .offer
        .img-circle(style="background-image: url(" + $image + ")")

mixin offer2($image, $text)
    .offer2
        .img-rounded(style="background-image: url(" + $image + ")")
        h4 #{$text}

mixin benefit($image, $header, $text)
    .benefit
        i.fa.img-circle(class="fa-" + $image)
        h4 #{$header}
        span #{$text}

mixin header($text, $image)
    header.section-header
        h2 #{$text}
        .divider
            hr
            img(src="assets/img/" + $image)
            hr

mixin results($header, $date, $s1, $s2, $s3)
    .results
        h3 Просрочка #{$header}
        span.date  Дата: #{$date}
        span.recovered Взыскано нами:
        .line
            span Неустойка:
            span #{currency($s1)} руб.
        .line
            span Штраф:
            span #{currency($s2)} руб.
        .line
            span Моральный вред:
            span #{currency($s3)} руб.
        span.total Итого:
        span.value #{currency($s1 + $s2 + $s3)} руб.

mixin actions($image, $text)
    .actions.col-md-8.col-md-offset-2
        i.fa.img-circle(class="fa-" + $image)
        p #{$text}

mixin helps($image, $text)
    .helps.col-md-3.col-xs-6
        a.wrap
            .img-circle(style="background-image: url(" + $image + ")")
            .text #{$text}

mixin stuff($image, $header, $position, $about)
    .stuff
        .img-circle(style="background-image: url(" + $image + ")")
        h3 #{$header}
        h4 #{$position}
        p #{$about}

mixin contacts-min()
    .contacts
        h3 оставьте ваши данные
        div и наши специалисты проконсультируют Вас абсолютно бесплатно
        .row.center-block(method='GET')
            .text-field.col-sm-6.col-md-4
                i.fa.fa-user
                input(type='text' name='name' placeholder='Ваше имя*')
            .text-field.col-sm-6.col-md-4
                i.fa.fa-phone
                input(type='tel' name='tel' placeholder='Ваш телефон*')
            .text-field.col-md-4
                button
                    span.action отправить
                    i.fa.fa-spinner.fa-pulse.hidden
        .error
        div *Ваши данные останутся конфеденциальными

mixin contacts-max()
    .contacts-max
        h3 оставьте ваше сообщение
        div и мы свяжемся с Вами удобным для Вас способом
        .row
            .col-md-8.col-md-offset-2
                .row.center-block(method='GET')
                    .text-field.col-md-6
                        input(type='text' name='name' placeholder='Ваше имя*')
                    .text-field.col-md-6
                        input(type='tel' name='tel' placeholder='Ваш телефон')
                    .text-field.col-md-12
                        input(type='email' name='mail' placeholder='Ваш e-mail')
                    .text-field.col-md-12
                        textarea(name='message' placeholder='Краткое описание проблемы (не обязательно)')
                    .text-field.col-xs-12
                        button
                            span.action отправить
                            i.fa.fa-spinner.fa-pulse.hidden
        .error

mixin calculator()
    .calculator
        h2 Калькулятор неустойки по 214-ФЗ
        .row
            .col-md-4
                label
                    span Стоимость договора, руб
                    input(type="number" name="sum" placeholder="2 000 000" inputmode="numeric" pattern="[0-9.]*")
            .col-md-4
                label
                    span Дата сдачи по договору
                    input(type="date" name="dateDocument")
            .col-md-4
                label
                    span Фактическая дата сдачи
                    input(type="date" name="dateReal")
                    span.notation если дом не сдан - оставьте поле пустым
        .row.text-center
            div.error
        .row
            .col-md-4.col-md-offset-4
                button.calc Посчитать
        .row
            .col-md-6.col-md-offset-3.result
                div



- function currency(value) {var re = '\\d(?=(\\d{3})+\\.)';return value.toFixed(2).replace(new RegExp(re, 'g'), '$& ');}